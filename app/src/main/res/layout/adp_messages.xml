<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutChat"
    android:layout_width="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp">
    <RelativeLayout
        android:id="@+id/rlRight"
        android:visibility="gone"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/test_arrow_right"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="-6dp"
            android:background="@null"
            android:scaleX="1.5"
            android:src="@drawable/chat_bubble_right" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/send_view"
            android:padding="4dp"
            android:layout_marginTop="4dp"
            android:layout_toLeftOf="@id/test_arrow_right"
            android:background="@drawable/bg_msg_right"
            android:orientation="horizontal">
            <ImageView
                android:visibility="gone"
                android:id="@+id/ivPdfRight"
                android:src="@drawable/ic_pdf"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/send_msg_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/roboto"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:text="knjkxndjn jndjnj njn"
                android:autoLink="all"
                android:textColor="@color/light_black"
                android:textSize="@dimen/subtext_size" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right">
                <TextView
                    android:id="@+id/send_time_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="4dp"
                    android:fontFamily="@font/roboto"
                    android:padding="4dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="@dimen/small_subtext_size" />
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:id="@+id/image_tick_right"
                   />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rlleft"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/test_arrow_left"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="-6dp"
            android:background="@null"
            android:scaleX="-1.5"
            android:src="@drawable/chat_bubble_left" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/send_view_left"
            android:padding="4dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/test_arrow_left"
            android:background="@drawable/bg_msg_left"
            android:orientation="horizontal">
            <ImageView
                android:visibility="gone"
                android:id="@+id/ivPdfLeft"
                android:src="@drawable/ic_pdf"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <TextView
                android:visibility="gone"
                android:id="@+id/send_msg_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/roboto"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:text="knjkxndjn jndjnj njn"
                android:autoLink="all"
                android:textColor="@color/light_black"
                android:textSize="@dimen/subtext_size" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right">
                <TextView
                    android:id="@+id/send_time_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="4dp"
                    android:text=""
                    android:fontFamily="@font/roboto"
                    android:padding="4dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="@dimen/small_subtext_size" />
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:id="@+id/image_tick_left"
                    android:visibility="gone"
                    android:src="@drawable/ic_tick_read"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>